---
import { getCollection } from "astro:content";

export async function getStaticPaths() {
  const entries = await getCollection("logbook");
  return entries.map((entry) => ({
    params: { slug: entry.slug },
    props: { entry }
  }));
}

const { entry } = Astro.props;
const fmt = (d) => new Date(d).toISOString().slice(0, 10);

const { Content } = await entry.render();
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{entry.data.title} • Logbook</title>
  </head>
  <body style="font-family: system-ui, Segoe UI, Arial, sans-serif; padding: 24px; max-width: 920px; margin: 0 auto;">
    <p><a href="/logbook" style="text-decoration:none;">← Back to Logbook</a></p>

    <h1 style="margin-bottom:6px;">{entry.data.title}</h1>
    <p style="opacity:.8; margin-top:0;">
      {fmt(entry.data.date)} • {String(entry.data.type).toUpperCase()} • {String(entry.data.status)}
    </p>

    {entry.data.projects?.length ? (
      <p style="opacity:.8;">Projects: {entry.data.projects.join(", ")}</p>
    ) : null}

    {entry.data.facts?.length ? (
      <>
        <h2>Facts</h2>
        <ul>
          {entry.data.facts.map((f) => <li>{f}</li>)}
        </ul>
      </>
    ) : null}

    {entry.data.neuron_stretch ? (
      <>
        <h2>Neuron stretch</h2>
        <p><em>{entry.data.neuron_stretch}</em></p>
      </>
    ) : null}

    <hr style="margin:18px 0; opacity:.3;" />

    <article>
      <Content />
    </article>

    <hr style="margin:18px 0; opacity:.3;" />
    <p style="opacity:.7;"><a href="/">Home</a></p>
  </body>
</html>
